<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ghm.giftcardfleamarket.brand.mapper.BrandMapper">

    <select id="selectBrandNamesByCategory" parameterType="Long" resultType="String">
        SELECT name FROM brand
        WHERE category_id = #{categoryId}
        ORDER BY id ASC
    </select>

    <select id="selectBrandName" parameterType="Long" resultType="String">
        SELECT name FROM brand
        WHERE id = #{brandId}
    </select>

</mapper>